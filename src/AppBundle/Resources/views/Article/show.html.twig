{% extends '::base.html.twig' %}

{% block content -%}
    <h1>Article</h1>

    <table class="record_properties">
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ article.id }}</td>
            </tr>
            <tr>
                <th>Name</th>
                <td>{{ article.name }}</td>
            </tr>
            <tr>
                <th>Content</th>
                <td>{{ article.content }}</td>
            </tr>
            <tr>
                <th>Author</th>
                <td>{{ article.user }}</td>
            </tr>
            {#<tr>#}
                {#<th>Category</th>#}
                {#<td>{{ article.category }}</td>#}
            {#</tr>#}
            {#<tr>#}
                {#<th>Tag</th>#}
                {#<td>{{ article.tag }}</td>#}
            {#</tr>#}
            <tr>
                <th>Picture</th>
                <img class="img-responsive" src="{{ article.picture }}" alt="picture" title="{{ article.name }}">
                <td>{{ article.picture }}</td>
            </tr>
        </tbody>
    </table>

        <ul class="record_actions">
    <li>
        <a href="{{ path('article') }}">
            Back to the list
        </a>
    </li>
</ul>
{% endblock %}
